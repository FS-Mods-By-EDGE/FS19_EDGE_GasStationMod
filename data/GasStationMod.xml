        <fillType name="water" priceScale="0" fillLitersPerSecond="500"/>
    </buyingStation>
    <animatedObjects>
        <animatedObject saveId="switch_01">
            <animation duration="0.5">
                <part node="2|3|1|0">
                    <keyFrame time="0.0" rotation="-51 0 0"/>
                    <keyFrame time="1.0" rotation="90 0 0"/>
                </part>
                <part node="7">
                    <keyFrame time="0.0" visibility="false"/>
                    <keyFrame time="1.0" visibility="true"/>
                </part>
                <part node="2|3|1|2|0">
                    <keyFrame time="0.0" visibility="false"/>
                    <keyFrame time="1.0" visibility="true"/>
                </part>
                <part node="2|3|1|3|0">
                    <keyFrame time="0.0" visibility="true"/>
                    <keyFrame time="1.0" visibility="false" visibilityInactive="false"/>
                </part>
            </animation>
            <controls triggerNode="2|3|0" posAction="ACTIVATE_HANDTOOL" posText="action_turnOnMarking" negText="action_turnOffMarking"/>
        </animatedObject>
    </animatedObjects>
    <clearAreas>
        <clearArea startNode="2|0|0" widthNode="2|0|0|0" heightNode="2|0|0|1"/>
    </clearAreas>
    <leveling requireLeveling="true" maxSmoothDistance="5" maxSlope="40" maxEdgeAngle="30">
        <levelAreas>
            <levelArea startNode="2|1|0" widthNode="2|1|0|0" heightNode="2|1|0|1"/>
        </levelAreas>
    </leveling>
    <seasons>
        <maskAreas>
            <!-- <maskArea startNode="5|2|0" widthNode="5|2|0|0" heightNode="5|2|0|1"/> -->
        </maskAreas>
    </seasons>
    <tipOcclusionUpdateArea sizeX="2.5" sizeZ="5"/>
    <hotspots>
        <hotspot name="$l10n_name_EDGENitro" fullName="$l10n_name_EDGENitroFull" imageName="GAS_STATION" hidable="true" linkNode="5" category="CATEGORY_TRIGGERS"/>
    </hotspots>
    <triggerMarkers>
        <triggerMarker node="6|0"/>
        <triggerMarker node="6|1"/>
        <triggerMarker node="6|2"/>
        <triggerMarker node="6|3"/>
    </triggerMarkers>
